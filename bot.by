def is_valid_date(year, month, day):
    try:
        datetime.datetime(year, month, day)
        return True
    except ValueError:
        return False

def adjust_date(year, month, day):
    while month > 12:
        year += 1
        month -= 12
    while month < 1:
        year -= 1
        month += 12
    
    while not is_valid_date(year, month, day):
        day -= 1
    return year, month, day

